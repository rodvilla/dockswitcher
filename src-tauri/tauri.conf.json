{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DockSwitcher",
  "version": "0.1.0",
  "identifier": "com.rodvilla.dockswitcher",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "DockSwitcher",
        "width": 720,
        "height": 480,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "visible": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": null
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": ["icons/icon.icns"],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "14.0",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "resources": ["resources/*"]
  }
}
