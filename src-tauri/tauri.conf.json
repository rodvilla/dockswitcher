{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DockSwitcher",
  "version": "0.1.0",
  "identifier": "com.dockswitcher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "DockSwitcher",
        "width": 720,
        "height": 480,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "visible": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "14.0",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "resources": [
      "resources/*"
    ]
  }
}
